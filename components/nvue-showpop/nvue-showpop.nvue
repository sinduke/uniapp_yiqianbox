<template>
	<view class=""  v-if="isShow" :style="{width:myWidth+'px'}">
		<view class="modal_box" :style="{height:myHeight+'rpx',width:myWidth+'px'}" @click="noModal">
			
		</view>
		<view @click.stop="stopModal" :class="{but_box1:paddingType==true}" class="but_box" :style="{opacity:active?1:0,transform:active?'scale(1,1)':'scale(0,0)',width:myWidth*0.1*popWidth+'px',left:myWidth*(5-popWidth/2)*0.1+'px',top:myHeight*topHeight*0.1+'rpx'}">
			<text class="but_text1" v-if="titleType">{{title}}</text>
			<text class="but_text2" v-if="textType">{{text}}</text>
			<slot></slot>
			<view v-if="buttonType" class="" style="align-items: center;margin-top:40rpx ;" :style="{width:(myWidth-32)*0.1*popWidth+'px'}">
				<view class="but_but" @click="noModal" >
					<text class="but_text3" >我知道了</text>
				</view>
			</view>
			
		</view>
	</view>
	
</template>

<script>
	import common from "@/common/js/common.js";
	export default {
		data() {
			return {
				active:false
			}
		},
		props: {
			//是否显示模态框
			isShow: {
				type: Boolean
			},
			// 弹框宽度默认百分之80
			popWidth: {
				type:Number,
				default: 8,
			},
			//距离顶部高度1-10分为10等分
			topHeight: {
				type:Number,
				default: 2,
			},
			//标题文字
			title: {
				type: String,
				default:'title是文本，是否显示标题titleType'
			},
			//文本内容
			text: {
				type: String,
				default:'text是文本，是否显示文本textType'
			},
			//是否显示文字
			textType: {
				type: Boolean,
				default:true
			},
			//是否显示标题
			titleType: {
				type: Boolean,
				default:true
			},
			//是否需要padding
			paddingType: {
				type: Boolean,
				default:false
			},
			//是否显示按钮
			buttonType: {
				type: Boolean,
				default:true
			},
		},
		watch:{
			isShow(val){
				if(val){
					setTimeout(()=>{
						this.active = true
					},100)
				}else{
					setTimeout(()=>{
						this.active = false
					},100)
				}
				
			}
		},
		computed:{
			myHeight() {
				return uni.getSystemInfoSync().windowHeight * (750 / uni.getSystemInfoSync().windowWidth)
			},
			myWidth() {
				return uni.getSystemInfoSync().windowWidth
			},
			platform(){
				return uni.getSystemInfoSync().platform
			}
		},
		methods: {
			stopModal(){
				
			},
			//点击取消
			noModal(){
				this.$emit('remove',this.isShow)
			},
		},
	}
</script>
	
