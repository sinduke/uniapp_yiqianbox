					<textarea @keyboardheightchange="keyboardheightchange"  v-model="rate.comment"  style="font-size: 30rpx;font-weight: 400;" :auto-height = "true"  :fixed="true" value="" placeholder="请输入回复内容..." :placeholder-style="{fontSize:'16rpx'}" />
				</view>
				<view @click="publicComment" style="width: 64rpx;height: 64rpx;box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.16);border-radius: 64rpx;justify-content: center;align-items: center;">
