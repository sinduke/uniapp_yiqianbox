</template>

<script>
	import {
		$api
	} from '@/config/api.js';
	import common from "@/common/js/common.js";
	import myNavbar from '@/components/nvue-navbar/nvue-navbar'
	import nloading from '@/components/nvue-loading/nvue-loading'
	import upLoadImage from '@/components/nvue-upLoadImage/nvue-upLoadImage.nvue';
	export default {
		data() {
			return {
				isNoData:false,
				loadinging:false,
				commentparams: {
					page: 1,
					offset: 100,
					object_id: 0,
					parent_id: "",
					type_name: "game",
				},
				pageData: {},
				commentData: {},
				soncomment: [],
				
				isImg: false,
				rate: {
					comment: ""
				},
				placeholder:"请输入回复内容...",
				action: 'https://api.sy12306.com/asset/upload',
				isTrue: false,
				fileList: [],
				isdata: true,
				nodata: true,
				type: true,
			}
		},
		computed: {
			myWidth() {
				return uni.getSystemInfoSync().windowWidth
			},
			myHeight() {
				return uni.getSystemInfoSync().windowHeight * (750 / uni.getSystemInfoSync().windowWidth)
			},	
		},
		components: {
			myNavbar,
			upLoadImage
		},
		onLoad(option) {
			console.log(1111)
			let itemobj = JSON.parse(option.item)
			this.commentData = itemobj
			if (option.type) {
				this.type = false
				this.commentparams.parent_id = itemobj.id
				this.commentparams.object_id = itemobj.id
			} else {
				this.commentparams.parent_id = itemobj.id
				this.commentparams.object_id = itemobj.id
			}
			this.gameData({
				game_id: option.gameid
			})
		
		},
		methods: {
			keyboardheightchange(e){
				if(e.detail.height){
					this.isImg = true
				}
			},
			// 图片上传
			uploadSuccess(data) {
				this.fileList = data;
				console.log(data)
			},
			// 隐藏图片框
			imgnoShow() {
				uni.hideKeyboard()
				this.isImg = false
				this.rate.comment = ''
				// this.$refs.uUpload.clear()
			},
			//查看图片
			handleImage(i, imglist) {
				common.previewImage(i, imglist)
			},
			gameData(params) {
				$api.get("/game/detail", {
					...params
				}).then(res => {
					this.pageData = res.data.data
					this.commentparams.object_id = this.pageData.game_id
					this.getEvaluate()
				})
			
			},
			// 提交评论
			publicComment() {
				if(common.isLogin()){
					if (!this.rate.comment) {
						return uni.showToast({
							icon: 'none',
							title: '请输入评论'
						})
					} else {
						let content = {
							content: this.rate.comment,
							content_img: this.fileList.toString()
						}
						$api.get("v8/comments/add", {
							...this.commentparams,
							...content,
						}).then(res => {
							console.log(666,res)
							this.isTrue = true
							uni.showToast({
								title: '发表成功',
								icon: 'none',
							})
							this.imgnoShow()
							this.getEvaluate()
						})
					}
				}
			},
			//获取子评论
			getEvaluate() {
				$api.get('v8/comments/sub_list', {
					...this.commentparams
				}).then(res => {
					if (res.data.code == 200) {
						console.log(res.data.data.list)
						this.soncomment = res.data.data
						
					}
				})
			},
			// 点赞或取消
			handleSupport(item) {
				if (common.isLogin()) {
					let params = {
						game_id: this.pageData.game_id,
						comment_id: item.id,
					};
					if (item.is_like == 2) {
						params["type"] = 1
					} else {
						params["type"] = 2
					}
					$api.get("v8/comments/like", {
						...params
					}).then(res => {
						if (res.data.code == 200) {
							if (item.is_like == 1 && item.is_hate == 1) {
								item.like_cnt++;
								item.is_like = 2
							} else if (item.is_like == 1 && item.is_hate == 2) {
								item.like_cnt++;
								item.is_like = 2;
								item.hate_cnt--;
								item.is_hate = 1;
							} else if (item.is_like == 2 && item.is_hate == 1) {
								item.like_cnt--;
								item.is_like = 1;
							}
						} else {
							uni.showToast({
								title: res.data.msg,
								icon: 'none'
							})
						}
					})
				}
			},
			//踩评论
			noSupport(item, index) {
				if (common.isLogin()) {
					let params = {
						game_id: this.pageData.game_id,
						comment_id: item.id,
						comment_type: 2,
					};
					if (item.is_hate == 2) {
						params["type"] = 1
					} else {
						params["type"] = 2
					}
					$api.get("v8/comments/like", {
						...params
					}).then(res => {	
						if (res.data.code == 200) {
							if (item.is_like == 1 && item.is_hate == 1) {
								item.hate_cnt++;
								item.is_hate = 2
							} else if (item.is_like == 2 && item.is_hate == 1) {
								item.hate_cnt++;
								item.is_hate = 2;
								item.like_cnt--;
								item.is_like = 1;
							} else if (item.is_like == 1 && item.is_hate == 2) {
								item.hate_cnt--;
								item.is_hate = 1;
							}
						} else {
							uni.showToast({
								title: res.data.msg,
								icon: 'none'
							})
						}
					})
				}
			}
		}
	}
</script>

